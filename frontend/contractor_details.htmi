<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contractor Details Form - BKNR SOLUTIONS</title>
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f7fc;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #004aad;
      color: white;
      text-align: center;
      padding: 20px 0;
      font-size: 1.6rem;
      font-weight: bold;
      letter-spacing: 1px;
    }

    .container {
      max-width: 1050px;
      margin: 40px auto;
      background-color: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #004aad;
      margin-bottom: 25px;
    }

    form {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
      justify-items: start;
      align-items: start;
    }

    .column {
      width: 250px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    label {
      font-weight: 600;
      margin-bottom: 5px;
      color: #333;
    }

    input, textarea {
      width: 100%;
      padding: 10px;
      font-size: 1rem;
      border-radius: 6px;
      border: 1px solid #ccc;
      outline: none;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    textarea {
      resize: none;
      height: 80px;
    }

    input:focus, textarea:focus {
      border-color: #004aad;
      box-shadow: 0 0 4px rgba(0, 74, 173, 0.4);
    }

    input[disabled] {
      background-color: #eee;
      color: #555;
      cursor: not-allowed;
    }

    button {
      grid-column: span 3;
      justify-self: center;
      background-color: #004aad;
      color: white;
      padding: 12px;
      font-size: 1rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      width: 200px;
      margin-top: 10px;
    }

    button:hover {
      background-color: #003580;
    }

    @media (max-width: 768px) {
      form {
        grid-template-columns: 1fr;
        gap: 20px;
        justify-items: center;
      }
      .column {
        width: 90%;
      }
    }
  </style>
</head>
<body>
  <header>BKNR SOLUTIONS</header>

  <div class="container">
    <h2>Contractor Details Form</h2>

    <form id="contractorForm" method="POST" action="/submit-contractor">
      <!-- Common Row 1: Date, Time, Email -->
      <div class="column">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" disabled>
      </div>

      <div class="column">
        <label for="time">Time:</label>
        <input type="time" id="time" name="time" disabled>
      </div>

      <div class="column">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" disabled>
      </div>

      <!-- Row 2: Contractor Details -->
      <div class="column">
        <label for="contractor">Contractor:</label>
        <input type="text" id="contractor" name="contractor" placeholder="Enter contractor name" required>
      </div>

      <div class="column">
        <label for="address">Address:</label>
        <textarea id="address" name="address" placeholder="Enter address" required></textarea>
      </div>

      <div class="column">
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" placeholder="Enter phone number" maxlength="15" required>
      </div>

      <!-- Row 3: Mail ID -->
      <div class="column">
        <label for="mailId">Mail ID:</label>
        <input type="email" id="mailId" name="mailId" placeholder="Enter mail ID" required>
      </div>

      <!-- Empty placeholders for grid alignment -->
      <div></div>
      <div></div>

      <button type="submit">Submit</button>
    </form>
  </div>

  <script>
    // Auto-fill current date & time
    const now = new Date();
    document.getElementById('date').valueAsDate = now;
    document.getElementById('time').value = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});

    // Auto-fill email (from login/localStorage)
    const userEmail = localStorage.getItem("user_email") || "bknr.solutions@gmail.com";
    document.getElementById('email').value = userEmail;
  </script>
</body>
</html>
